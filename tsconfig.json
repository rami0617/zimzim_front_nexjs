{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "#api/*": ["src/api/*"],
      "#components/*": ["src/components/*"],
      "#hooks/*": ["src/hooks/*"],
      "#util/*": ["src/util/*"],
      "#constants/*": ["src/constants/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "src/**/*",
    "next-i18next.config.cjs",
    "i18n.js",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.js"
  ],
  "files": ["src/custom.d.ts"],
  "exclude": ["node_modules"]
}
